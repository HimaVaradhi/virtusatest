<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10"
    android:layout_marginRight="@dimen/dimen_10"
    android:layout_marginTop="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/dimen_8"
    app:cardElevation="@dimen/dimen_5"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_8"
        android:padding="15dp">


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="2022-01-24T17:02:23.729Z"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_fn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            tools:ignore="MissingConstraints"
            style="@style/MyActionBarTheme"
            android:layout_marginTop="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="Maggie"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textSize="10sp"/>


        <ImageView
            android:id="@+id/tv_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_fn"
            tools:ignore="MissingConstraints"
            style="@style/MyActionBarTheme"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:hint="Brekke"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_ln"
            tools:ignore="MissingConstraints"
            style="@style/MyActionBarTheme"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:hint="Crystel.Nicolas61@hotmail.com"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_email"
            tools:ignore="MissingConstraints"
            style="@style/MyActionBarTheme"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:hint="Future Functionality Strategist"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_fav_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title"
            tools:ignore="MissingConstraints"
            style="@style/MyActionBarTheme"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="pink"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_fav_color"
            tools:ignore="MissingConstraints"
            style="@style/MyActionBarTheme"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:hint="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/dimen_10"
            android:textSize="12sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>